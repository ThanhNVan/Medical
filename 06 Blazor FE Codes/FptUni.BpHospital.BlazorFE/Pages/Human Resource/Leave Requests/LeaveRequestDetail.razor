@page "/Hr/LeaveRequest/{Id}"
@namespace FptUni.BpHospital.BlazorFE

@attribute [Authorize(Policy = "HRManager")]

<PageTitle>Details</PageTitle>


<SfButton CssClass="e-inherit" IconCss="oi oi-circle-check" OnClick="async () => await ApproveAsync()">Approve this request</SfButton>
<SfButton CssClass="e-inherit" IconCss="oi oi-circle-x" OnClick="async () => await DenyAsync()">Deny this request</SfButton>
<div class="col-lg-12">
    <EditForm Model="@WorkItem">
        <div style="padding-top: 20px;">
            <div class="form-group col-md-6">
                @if (WorkItem.User is not null)
                {
                    <SfTextBox Readonly=true Value="@WorkItem.User.Fullname" Placeholder="Fullname" FloatLabelType="FloatLabelType.Always" />
                    <SfTextBox Readonly=true Value="@WorkItem.User.EmailAddress" Placeholder="Email" FloatLabelType="FloatLabelType.Always" />
                }
                <SfTextBox Readonly=true Value="@WorkItem.StartDate.ToShortDateString()" Placeholder="StartDate" FloatLabelType="FloatLabelType.Always" />
                <SfTextBox Readonly=true Value="@WorkItem.EndDate.ToShortDateString()" Placeholder="EndDate" FloatLabelType="FloatLabelType.Always" />
                <SfNumericTextBox Readonly=true Value="@WorkItem.TotalDay" Placeholder="TotalDay" FloatLabelType="FloatLabelType.Always" />
                <SfTextBox Readonly=true Value="@WorkItem.LeaveType.ToString()" Placeholder="LeaveType" FloatLabelType="FloatLabelType.Always" />
                <SfTextBox Readonly=true Value="@WorkItem.LeaveState.ToString()" Placeholder="LeaveState" FloatLabelType="FloatLabelType.Always" />
            </div>
        </div>
    </EditForm>
</div>